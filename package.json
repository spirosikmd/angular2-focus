{
  "name": "angular2-focus",
  "version": "0.0.0-development",
  "description": "Angular attribute directive that gives focus on an element depending on a given expression",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "test": "karma start",
    "lint": "tslint -c tslint.json 'index.ts src/**/*.ts docs/**/*.ts'",
    "start": "ngc",
    "prepublish": "ngc",
    "docs": "concurrently \"watchify docs/main.ts -p [ tsify ] -o docs/bundle.js\" \"lite-server\"",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "git-cz",
    "add-contributor": "all-contributors add",
    "generate-contributors": "all-contributors generate",
    "precommit": "lint-staged"
  },
  "keywords": [
    "angular",
    "angular2",
    "@angular",
    "focus"
  ],
  "author": "Spyros Ioakeimidis <spyrosikmd@gmail.com> (http://www.spyros.io)",
  "license": "MIT",
  "dependencies": {
    "@angular/core": "^4.1.2"
  },
  "devDependencies": {
    "@angular/common": "^4.1.2",
    "@angular/compiler": "^4.1.2",
    "@angular/compiler-cli": "^4.1.2",
    "@angular/forms": "^4.1.2",
    "@angular/platform-browser": "^4.1.2",
    "@angular/platform-browser-dynamic": "^4.1.2",
    "@angular/platform-server": "^4.1.2",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.26",
    "@types/core-js": "^0.9.41",
    "@types/jasmine": "^2.5.47",
    "all-contributors-cli": "^4.3.0",
    "awesome-typescript-loader": "^3.1.3",
    "browserify": "^14.3.0",
    "commitizen": "^2.9.6",
    "concurrently": "^3.4.0",
    "core-js": "^2.4.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.0",
    "jasmine-core": "^2.6.1",
    "karma": "^1.7.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "lint-staged": "^4.0.0",
    "lite-server": "^2.3.0",
    "null-loader": "^0.1.1",
    "prettier": "^1.4.2",
    "rxjs": "^5.4.0",
    "semantic-release": "^7.0.1",
    "tsify": "^3.0.1",
    "tslint": "^5.0.0",
    "typescript": "^2.3.2",
    "wallaby-webpack": "^0.0.40",
    "watchify": "^3.7.0",
    "webpack": "^3.0.0",
    "zone.js": "^0.8.10"
  },
  "typings": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/spirosikmd/angular2-focus"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "--single-quote --list-different --write \"{src,docs}/**/*.ts\"",
      "git add"
    ]
  }
}
