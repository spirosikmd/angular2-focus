{
  "name": "angular2-focus",
  "version": "0.0.0-development",
  "description": "Angular attribute directive that gives focus on an element depending on a given expression",
  "main": "dist/bundles/angular2-focus.umd.js",
  "module": "dist/angular2-focus.es5.js",
  "es2015": "dist/angular2-focus.js",
  "typings": "dist/angular2-focus.d.ts",
  "scripts": {
    "test": "karma start",
    "lint": "tslint -c tslint.json 'index.ts src/**/*.ts docs/**/*.ts'",
    "start": "ngc",
    "build": "ng-packagr -p package.json",
    "prepare": "yarn build",
    "docs": "concurrently \"watchify docs/main.ts -p [ tsify ] -o docs/bundle.js\" \"lite-server\"",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "add-contributor": "all-contributors add",
    "generate-contributors": "all-contributors generate",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "keywords": [
    "angular",
    "angular2",
    "@angular",
    "focus"
  ],
  "author": "Spyros Ioakeimidis <spyrosikmd@gmail.com> (http://www.spyros.io)",
  "license": "MIT",
  "devDependencies": {
    "@angular/animations": "^6.1.1",
    "@angular/common": "^6.1.1",
    "@angular/compiler": "^6.1.1",
    "@angular/compiler-cli": "^6.1.1",
    "@angular/core": "^6.1.1",
    "@angular/forms": "^6.1.1",
    "@angular/platform-browser": "^6.1.1",
    "@angular/platform-browser-dynamic": "^6.1.1",
    "@angular/platform-server": "^6.1.1",
    "@ng-bootstrap/ng-bootstrap": "^2.2.0",
    "@types/core-js": "^2.5.0",
    "@types/jasmine": "^2.5.47",
    "all-contributors-cli": "^4.3.0",
    "awesome-typescript-loader": "^3.1.3",
    "browserify": "^14.3.0",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.0",
    "core-js": "^2.4.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.0",
    "jasmine-core": "^2.6.1",
    "karma": "^1.7.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "lint-staged": "^7.2.0",
    "lite-server": "^2.3.0",
    "ng-packagr": "^1.6.0",
    "null-loader": "^0.1.1",
    "prettier": "^1.4.2",
    "rxjs": "^6.2.2",
    "semantic-release": "^17.2.3",
    "travis-deploy-once": "^5.0.1",
    "tsify": "^3.0.1",
    "tslint": "^5.0.0",
    "typescript": "~2.9.2",
    "wallaby-webpack": "^3.9.4",
    "watchify": "^3.7.0",
    "webpack": "^3.0.0",
    "zone.js": "^0.8.26"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spirosikmd/angular2-focus"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "ngPackage": {
    "lib": {
      "entryFile": "index.ts"
    }
  }
}
